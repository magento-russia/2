<?xml version='1.0'?>
<config>
	<modules>
		<Df_Core>
			<version>2.23.6</version>
			<author>Дмитрий Федюк</author>
		</Df_Core>
	</modules>
	<df>
		<version>2.47.0.3</version>
		<jquery>
			<core>
				<cdn>http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js</cdn>
				<local>df/js/system/jquery.js</local>
			</core>
			<migrate>
				<cdn>http://code.jquery.com/jquery-migrate-1.2.1.js</cdn>
				<local>df/js/system/jquery-migrate-1.2.1.js</local>
			</migrate>
		</jquery>
		<units>
			<length>
				<millimetre>
					<label>миллиметр</label>
					<ratio>1</ratio>
				</millimetre>
				<centimetre>
					<label>сантиметр</label>
					<ratio>10</ratio>
				</centimetre>
				<metre>
					<label>метр</label>
					<ratio>1000</ratio>
				</metre>
			</length>
			<weight>
				<gram>
					<label>грамм</label>
					<ratio>1</ratio>
				</gram>
				<kilogram>
					<label>килограмм</label>
					<ratio>1000</ratio>
				</kilogram>
			</weight>
