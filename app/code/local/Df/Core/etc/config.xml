					<df_core__controller_action_postdispatch_install_wizard_end>
						<class>df_core/dispatcher</class>
						<method>controller_action_postdispatch_install_wizard_end</method>
					</df_core__controller_action_postdispatch_install_wizard_end>
				</observers>
			</controller_action_postdispatch_install_wizard_end>
		</events>
	</install>
	<stores>
