			</controller_action_layout_render_before>
			<controller_action_predispatch>
				<observers>
					<df_core__controller_action_predispatch>
						<class>df_core/dispatcher</class>
						<method>controller_action_predispatch</method>
					</df_core__controller_action_predispatch>
				</observers>
			</controller_action_predispatch>
			<controller_action_postdispatch>
				<observers>
					<df_core__controller_action_predispatch>
						<class>df_core/dispatcher</class>
						<method>controller_action_postdispatch</method>
					</df_core__controller_action_predispatch>
				</observers>
			</controller_action_postdispatch>
			<controller_front_init_before>
				<observers>
					<df_core__controller_front_init_before>
						<class>df_core/dispatcher</class>
						<method>controller_front_init_before</method>
					</df_core__controller_front_init_before>
				</observers>
			</controller_front_init_before>
			<controller_front_send_response_after>
				<observers>
					<df_core__controller_front_send_response_after>
						<class>df_core/dispatcher</class>
						<method>controller_front_send_response_after</method>
					</df_core__controller_front_send_response_after>
				</observers>
			</controller_front_send_response_after>
			<default>
				<observers>
					<df_core__default>
						<class>Df_Core_Bootstrap</class>
						<method>init</method>
					</df_core__default>
				</observers>
			</default>
			<resource_get_tablename>
				<observers>
					<df_core__resource_get_tablename>
						<class>Df_Core_Bootstrap</class>
						<method>resource_get_tablename</method>
					</df_core__resource_get_tablename>
				</observers>
			</resource_get_tablename>
		</events>
		<resources>
			<df_core_setup>
				<setup>
					<module>Df_Core</module>
					<class>Df_Core_Model_Resource_Setup</class>
				</setup>
			</df_core_setup>
		</resources>
		<cache>
			<types>
				<rm_url translate='label,description' module='df_core'>
					<label>Веб-адреса</label>
					<description>Веб-адреса страниц магазина</description>
					<tags>rm_url</tags>
				</rm_url>
			</types>
		</cache>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<df_core module='df_core'><file>df/core.xml</file></df_core>
