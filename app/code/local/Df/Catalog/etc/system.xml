<?xml version='1.0'?>
<config>
	<sections>
		<catalog>
			<groups>
				<frontend>
					<fields>
						<flat_catalog_category>
							<backend_model>Df_Catalog_Model_Config_Backend_Catalog_Category_Flat</backend_model>
						</flat_catalog_category>
						<flat_catalog_product>
							<backend_model>Df_Catalog_Model_Config_Backend_Catalog_Product_Flat</backend_model>
						</flat_catalog_product>
					</fields>
				</frontend>
				<placeholder>
					<fields>
						<placeholder>
							<label>Placeholder</label>
						</placeholder>
					</fields>
				</placeholder>
				<sitemap>
					<label>Category Sitemap</label>
				</sitemap>
			</groups>
		</catalog>
		<design>
			<groups>
				<watermark>
					<fields>
						<imageOpacity>
							<comment>Specify integer number from 0 till 100.</comment>
						</imageOpacity>
					</fields>
				</watermark>
			</groups>
		</design>
		<df_tweaks>
			<groups>
				<illustrated_catalog_navigation>
					<label>Иллюстрированное меню товарных разделов</label>
					<frontend_type>text</frontend_type>
					<sort_order>205</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Activate?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1000</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>Df_Admin_Block_Field</frontend_model>
							<df_feature>df-tweaks</df_feature>
						</enabled>
						<enabled_for_front_page>
							<label>Activate for Front Page?</label>
							<comment>
								<![CDATA[
									После включения данной опции определите конкретное размещение блока
									<br/><i>{{block type='df_catalog/category_navigation'}}</i><br/>
									на странице<br/>«CMS» ⇾ «Pages» ⇾ «Home Page» ⇾ «Content».
								]]>
							</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1000</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
						</enabled_for_front_page>
						<position>
							<label>Position</label>
							<frontend_type>select</frontend_type>
							<source_model>Df_Catalog_Model_Config_Source_Category_Content_Position</source_model>
							<sort_order>2000</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
						</position>
						<number_of_columns>
							<label>Number of Columns</label>
							<frontend_type>text</frontend_type>
							<sort_order>3000</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
						</number_of_columns>
					</fields>
				</illustrated_catalog_navigation>
			</groups>
		</df_tweaks>
	</sections>
</config>
