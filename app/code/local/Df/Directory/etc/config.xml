			<import>
				<services>
					<rm-russia>
						<name>Банк России</name>
						<model>Df_Directory_Model_Currency_Import_Russia</model>
						<ordering>-400</ordering>
					</rm-russia>
					<rm-ukraine>
						<name>Национальный банк Украины</name>
						<model>Df_Directory_Model_Currency_Import_Ukraine</model>
						<ordering>-300</ordering>
					</rm-ukraine>
					<rm-kazakhstan>
						<name>Национальный банк Казахстана</name>
						<model>Df_Directory_Model_Currency_Import_Kazakhstan</model>
						<ordering>-200</ordering>
					</rm-kazakhstan>
					<rm-belarus>
						<name>Национальный банк Республики Беларусь</name>
						<model>Df_Directory_Model_Currency_Import_Belarus</model>
						<ordering>-100</ordering>
					</rm-belarus>
				</services>
			</import>
		</currency>
		<helpers>
			<df_directory><class>Df_Directory_Helper</class></df_directory>
			<directory>
				<rewrite>
					<!--
						Цель перекрытия —
						исправление упорядочивания субъектов РФ для Webkit.
					-->
					<data>Df_Directory_Helper_Data</data>
				</rewrite>
			</directory>
		</helpers>
		<models>
			<df_directory>
				<class>Df_Directory_Model</class>
				<resourceModel>df_directory_resource</resourceModel>
			</df_directory>
			<df_directory_resource>
				<class>Df_Directory_Model_Resource</class>
			</df_directory_resource>
			<directory>
				<rewrite>
					<!--
						Цели перекрытия:
						1) Предоставление администратору возможности скрывать копейки из ценников.
						2) Улучшение метода @see Mage_Directory_Model_Currency::convert():
						этот метод работает некорректно в нескольких случаях:
							а) если $toCurrency — строка
							б) когда нет прямого курса конвертации, но есть обратный.
							в) когда обе валюты не являются базовой,
							и по этой причине нет ни прямого курса конвертации, ни обратного,
							но возможна конвартация через базовую (третью) валюту:
							http://magento-forum.ru/topic/4335/
					-->
					<currency>Df_Directory_Model_Currency</currency>
				</rewrite>
			</directory>
			<!-- Для Magento версии меньше 1.6 -->
			<directory_mysql4>
				<rewrite>
					<!--
						Цель перекрытия —
						добавление возможности ставить популярные страны выше остальных
						в списке стран
					-->
					<country_collection>Df_Directory_Model_Resource_Country_Collection</country_collection>
					<!--
						В Magento CE < 1.6
						класс Mage_Directory_Model_Mysql4_Region
						не наследован от Mage_Core_Model_Mysql4_Abstract,
						что приводит к сбоям моего установочного скрипта
						при вызове метода save().

						Поэтому для Magento CE < 1.6
						перекрываем класс Mage_Directory_Model_Mysql4_Region
						классом Df_Directory_Model_Resource_Region,
						программный код которого взят из
						класса Mage_Directory_Model_Resource_Region для Magento CE >= 1.6
					-->
					<region>Df_Directory_Model_Resource_Region</region>
					<!--
						Добавляем поддержку события «core_collection_abstract_load_before»
					-->
					<region_collection>Df_Directory_Model_Resource_Region_Collection</region_collection>
				</rewrite>
			</directory_mysql4>
			<directory_resource>
				<rewrite>
					<!--
						Цель перекрытия —
						добавление возможности ставить популярные страны выше остальных
						в списке стран.
					-->
					<country_collection>Df_Directory_Model_Resource_Country_Collection</country_collection>
				</rewrite>
			</directory_resource>
		</models>
