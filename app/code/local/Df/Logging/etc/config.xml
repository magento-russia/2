<?xml version='1.0'?>
<config>
	<modules>
		<Df_Logging>
			<author>Дмитрий Федюк</author>
			<version>1.0.0</version>
		</Df_Logging>
	</modules>
	<global>
		<blocks><df_logging><class>Df_Logging_Block</class></df_logging></blocks>
		<helpers><df_logging><class>Df_Logging_Helper</class></df_logging></helpers>
		<models>
			<df_logging>
				<class>Df_Logging_Model</class>
				<resourceModel>df_logging_resource</resourceModel>
			</df_logging>
			<df_logging_resource>
				<class>Df_Logging_Model_Resource</class>
				<entities>
					<event><table>df_logging_event</table></event>
					<event_changes><table>df_logging_event_changes</table></event_changes>
				</entities>
			</df_logging_resource>
		</models>
		<resources>
			<df_logging_setup>
				<setup>
					<module>Df_Logging</module>
					<class>Df_Core_Model_Resource_Setup</class>
				</setup>
			</df_logging_setup>
		</resources>
	</global>
	<adminhtml>
		<events>
			<controller_action_predispatch>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>controller_action_predispatch</method>
					</Df_Logging>
				</observers>
			</controller_action_predispatch>
			<controller_action_postdispatch_adminhtml>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>controller_action_postdispatch_adminhtml</method>
					</Df_Logging>
				</observers>
			</controller_action_postdispatch_adminhtml>
			<model_save_after>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>model_save_after</method>
					</Df_Logging>
				</observers>
			</model_save_after>
			<model_delete_after>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>model_delete_after</method>
					</Df_Logging>
				</observers>
			</model_delete_after>
			<model_load_after>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>model_load_after</method>
					</Df_Logging>
				</observers>
			</model_load_after>
			<admin_session_user_login_success>
				<observers>
					<Df_Logging>
						<class>Df_Logging_Observer</class>
						<method>admin_session_user_login_success</method>
					</Df_Logging>
				</observers>
			</admin_session_user_login_success>
		</events>
		<layout>
			<updates>
				<events><file>df/logging.xml</file></events>
			</updates>
		</layout>
		<translate>
			<modules>
				<Df_Logging><files><default>Df/Logging.csv</default></files></Df_Logging>
			</modules>
		</translate>
		<df>
			<logging>
				<skip_fields>updated_at,form_key</skip_fields>
			</logging>
		</df>
	</adminhtml>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Df_Logging before='Mage_Adminhtml'>Df_Logging_Adminhtml</Df_Logging>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<crontab>
		<jobs>
			<df_logging_rotate_logs>
				<!--
				<schedule>
					<cron_expr>1 2 * * *</cron_expr>
				</schedule>
				-->
			   <!--
				<schedule>
					<cron_expr>*/1 * * * *</cron_expr>
				</schedule>
				-->
				<run>
					<model>Df_Logging_Observer::rotateLogs</model>
				</run>
			</df_logging_rotate_logs>
		</jobs>
	</crontab>
	<df>
		<features>
			<df-logging>
				<module>df_logging</module>
				<title>Контроль работников магазина</title>
				<url>http://magento-forum.ru/forum/182/</url>
			</df-logging>
		</features>
	</df>
	<default>
		<df_tweaks_admin>
			<logging__archiving>
				<enabled>0</enabled>
				<frequency>D</frequency>
				<time>3,0,0</time>
				<lifetime>90</lifetime>
			</logging__archiving>
		</df_tweaks_admin>
	</default>
</config>
