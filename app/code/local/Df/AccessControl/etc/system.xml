<?xml version='1.0'?>
<config>
	<sections>
		<df_tweaks_admin>
			<groups>
				<access_control>
					<label>Расширенное управление доступом</label>
					<frontend_type>text</frontend_type>
					<sort_order>7000</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<!--
								Модуль «Управление доступом к административным разделам»
								имеет право оказывать на систему какое-либо влияние,только если данная опция установлена в «true»
							-->
							<label>Включить?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>Df_Admin_Block_Field</frontend_model>
							<df_feature>df-access-control</df_feature>
						</enabled>
						<auto_expand_all>
							<label>Раскрывать дерево разделов?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>150</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>Df_Admin_Block_Field</frontend_model>
							<df_feature>df-access-control</df_feature>
						</auto_expand_all>
						<auto_select_ancestors>
							<label>Добавлять ли в выборку предков выбранного товарного раздела?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>200</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>Df_Admin_Block_Field</frontend_model>
							<df_feature>df-access-control</df_feature>
						</auto_select_ancestors>
						<auto_select_descendants>
							<label>Добавлять ли в выборку потомков выбранного товарного раздела?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>300</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>Df_Admin_Block_Field</frontend_model>
							<df_feature>df-access-control</df_feature>
						</auto_select_descendants>
					</fields>
				</access_control>
			</groups>
		</df_tweaks_admin>
	</sections>
</config>