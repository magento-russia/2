<?php echo df_output()->getXmlHeader(); ?>
<?php /** @var Mage_Core_Block_Template $this */ ?>
<request>
	<hash><?php echo $this->getHash(); ?></hash>
	<Opcode><?php echo $this->getOperationCode(); ?></Opcode>
