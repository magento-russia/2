<?xml version='1.0'?>
<layout>
    <adminhtml_customer_edit>
        <reference name='customer_edit_tabs'>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance' name='customerbalance'/>
            <action method='addTab'><name>customerbalance</name><block>customerbalance</block></action>
        </reference>
        <reference name='js'>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_js' template='df/customerbalance/edit/js.phtml' name='customerbalance_edit_js'>
                <action method='setPrefix'><value>_customerbalance</value></action>
            </block>
        </reference>
        <reference name='customer_edit_tab_view'>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_balance' name='customerbalance.balance' template='df/customerbalance/balance.phtml' before='-'>
                <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_balance_grid' name='customer.balance.grid' as='grid'/>
            </block>
        </reference>
    </adminhtml_customer_edit>
    <adminhtml_customerbalance_form>
        <block type='core/text_list' name='root'>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_balance' name='customerbalance.balance' template='df/customerbalance/balance.phtml'>
                <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_balance_grid' name='customer.balance.grid' as='grid'/>
            </block>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_form' name='customerbalance.form'/>
            <block type='df_customerbalance/adminhtml_customer_edit_tab_customerbalance_balance_history' name='customerbalance.history'/>
        </block>
    </adminhtml_customerbalance_form>
    <adminhtml_sales_order_view>
        <reference name='order_totals'>
            <block type='adminhtml/sales_order_totals_item' name='customerbalance' template='df/customerbalance/sales/order/totals/customerbalance.phtml'>
                <action method='setSourceField'><value>customer_balance_amount</value></action>
                <action method='setLabel'><value>Store Credit</value></action>
            </block>
            <block type='adminhtml/sales_order_totals_item' name='customerbalance_refunded' template='sales/order/totals/item.phtml'>
                <action method='setSourceField'><value>customer_balance_total_refunded</value></action>
                <action method='setLabel'><value>Refunded to Store Credit</value></action>
                <action method='setDisplayArea'><value>footer</value></action>
                <action method='setStrong'><flag>true</flag></action>
                <action method='setHtmlClass'><class>emph</class></action>
            </block>
        </reference>
    </adminhtml_sales_order_view>
    <adminhtml_sales_order_invoice_new>
